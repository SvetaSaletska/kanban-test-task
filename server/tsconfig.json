{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true, // Enable '.ts' extensions in import paths
    "resolveJsonModule": true // Optional: for importing JSON modules if needed
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

